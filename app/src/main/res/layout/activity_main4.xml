<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Main4Activity">

        <Button
            android:id="@+id/btObservable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ObservableActivity"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btViewModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ViewModelActivity"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btObservable" />

        <Button
            android:id="@+id/btWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Two-Way"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btViewModel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
